<Window x:Class="MVVM简单例子.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox Text="{Binding Input1}" Width="50" Height="30"/>
        <TextBox Text="{Binding Input2}" Width="50" Height="30"/>
        <TextBox Text="{Binding Result}" Width="50" Height="30"/>
        <Button Command="{Binding AddCommand}" Height="30" Width="60" Content="add"/>
    </StackPanel>
</Window>
